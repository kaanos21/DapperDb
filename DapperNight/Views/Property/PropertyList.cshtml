@model List<DapperNight.Dtos.PropertyDtos.ResultPropertyDto>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Property List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .property-card {
            margin-bottom: 20px;
        }

            .property-card img {
                width: 100%;
                height: auto;
            }

        .card-body {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Property List</h1>

        <!-- Filter Form -->
        <div class="card mb-4">
            <div class="card-header">
                Filter Properties
            </div>
            <div class="card-body">
                <form method="post" action="@Url.Action("PropertyList")">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="City">City</label>
                                <input type="text" id="City" name="City" class="form-control" placeholder="City"  />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="Status">Status</label>
                                <input type="text" id="Status" name="Status" class="form-control" placeholder="Status"  />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="MinPrice">Min Price</label>
                                <input type="number" id="MinPrice" name="MinPrice" class="form-control" placeholder="Min Price"  />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="MaxPrice">Max Price</label>
                                <input type="number" id="MaxPrice" name="MaxPrice" class="form-control" placeholder="Max Price"  />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="MinRoomCount">Min Room Count</label>
                                <input type="number" id="MinRoomCount" name="MinRoomCount" class="form-control" placeholder="Min Room Count"  />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="MaxRoomCount">Max Room Count</label>
                                <input type="number" id="MaxRoomCount" name="MaxRoomCount" class="form-control" placeholder="Max Room Count"  />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="MinArea">Min Area</label>
                                <input type="number" id="MinArea" name="MinArea" class="form-control" placeholder="Min Area"  />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="MaxArea">Max Area</label>
                                <input type="number" id="MaxArea" name="MaxArea" class="form-control" placeholder="Max Area"  />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="CategoryId">Category ID</label>
                                <input type="number" id="CategoryId" name="CategoryId" class="form-control" placeholder="Category ID"  />
                            </div>
                        </div>

                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">Filter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Property List -->
        <div class="container mt-4">
            <h1 class="mb-4">Property List</h1>

            <div class="row">
                @foreach (var property in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card property-card">
                            @if (!string.IsNullOrEmpty(property.ImageUrl))
                            {
                                <img src="@property.ImageUrl" alt="Property Image" class="card-img-top" />
                            }
                            else
                            {
                                <img src="placeholder.jpg" alt="Property Image" class="card-img-top" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">@property.City</h5>
                                <p class="card-text">Price: @property.Price.ToString("C")</p>
                                <p class="card-text">Rooms: @property.RoomCount</p>
                                <a href="/Property/PropertyById/@property.Id" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
